
@{
    Layout = "_Layout";
}

@section Styles
{
  <link rel="stylesheet" href="~/css/Styles/indexStyle.css"/>
  <link rel="stylesheet" href="~/css/Styles/InfoProductStyle.css"/>
}
@section Scripts{
  <script src="~/js/Scripts/InfoProductScript.js"></script>
}
<main class="d-flex flex-column container">
  <nav class="my-3 ms-3 ps-3" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item " aria-current="page"><a href="#">Electrical</a></li>
      <li class="breadcrumb-item active" aria-current="page">Play Station</li>

    </ol>
  </nav>
  <div class=" d-flex flex-column-reverse flex-md-row justify-content-around">
    <!--Start Product Images-->
    <div id="ClickSlider" class="col-12 col-md-5">
      <div class="d-flex flex-row justify-content-center mb-3 align-content-center">
        <img src="~/Images/Product/ps5(1).png" id="MainImage" class="w-pc border border-dark" alt="">
      </div>
      <div class="d-flex flex-row flex-wrap  justify-content-around ">
        <img src="~/Images/Product/ps5(2).png" class="img-thumbnail border rounded-2 w-px shadowRgb" alt="">
        <img src="~/Images/Product/ps5(3).png" class="img-thumbnail border rounded-2 w-px shadowRgb" alt="">
        <img src="~/Images/Product/ps5(4).png" class="img-thumbnail border rounded-2 w-px shadowRgb" alt="">
        <img src="~/Images/Product/ps5(5).png" class="img-thumbnail border rounded-2 w-px shadowRgb" alt="">
      </div>
    </div>
    <!--End Product Images-->
    <!--Start Product Descriptions-->
    <div id="Description" class="col-12 col-md-5">
      <h1 class=" text-center text-md-start">Sony Playstation 5</h1>
      <div class="d-flex flex-row my-5  justify-content-center justify-content-md-start">
        <p class="fw-light"><i class="fa fa-check " aria-hidden="true"></i><span>In stoke</span></p>
        <p class="text-muted ps-5">Product code: TSA-135C14</p>
      </div>
      <p class="my-5 text-center text-md-start">
        Redefine your expectaions of immersion in gaming <br>
        with moments so instense  your intuition takes over. <br>
        Step into incredible virtual worlds and ecperience <br>
        enterainment n new and extraordinary ways.
      </p>
      <div class="w-50 position-relative border-top my-5 ms-5 ms-md-0">
        <p class="fs-1">$390.00 </p>
        <p class="text-decoration-line-through fs-5 ms-3 position-absolute top-0 start-50 d-none d-lg-block">$410.00</p>
      </div>
      <div class="d-flex flex-row justify-content-between w-75 ms-5 ms-md-0 mb-3 mb-md-0">
        <a href="#" class="btn btn-primary opacity-75 fw-bolder fs-4 px-3 py-2">
          <i class="fa fa-cart-plus" aria-hidden="true"></i>
          ADD TO CART
        </a>
        <a class="pt-2  ms-4 ms-lg-0"> <i  id="heart" class="fa fa-heart fs-2" aria-hidden="true"></i></a>
        <a href="#" class="pt-2 ms-4 ms-lg-0"><i class="fa fa-balance-scale fs-2" aria-hidden="true"></i></a>
      </div>
    </div>
    <!--End Product Descriptions-->
  </div>
</main>