@using WebApplication2.ViewModels.Account
@model LoginViewModel
@{
    ViewData["Title"] = "login";
    Layout = "_LayoutForRegister";;
}
@section Styles{
    <link rel="stylesheet" href="~/css/Styles/Login form.css">
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="p-5">
        <div class="alert alert-success text-center d-flex flex-row justify-content-around" role="alert">
                <div class="d-flex flex-row justify-content-end">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="text-center">
                    <p class="text-dark fw-bold"> @TempData["SuccessMessage"]</p>
                </div>
            </div>
    </div>
}

<h1 class="d-flex flex-row justify-content-center text-light fw-bolder pt-4 mt-4">@ViewData["Title"]</h1>
<div>
    <form asp-controller="Account" asp-action="Login" method="post" class=" d-flex flex-column align-items-center ">
        <div class="form-group mb-3 col-5">
            <label for="InputEmail" class="text-light">Username</label>
            <input asp-for="Username" class="form-control" id="InputName" aria-describedby="NameHelpId" placeholder="">
            <span asp-validation-for="Username" id="NameHelpId"  class="form-text fw-bolder text-bg-light text-success"></span>
        </div>
        <div class="form-group mb-3 col-5">
            <label for="InputEmail" class="text-light">Password</label>
            <input asp-for="Password" class="form-control" id="InputPassword" aria-describedby="PasswordHelpId" placeholder="">
            <span asp-validation-for="Password" id="PasswordHelpId"  class="form-text fw-bolder text-bg-light text-success"></span>
        </div>
        <div class="form-check">
            <input asp-for="Remeberme" class="form-check-input" type="checkbox" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remeber Me
            </label>
        </div>
        <div>
            <button class="btn btn-outline-success text-light fw-bold" type="submit" value="save">Enter</button>
        </div>
    </form>
    <div class="d-flex flex-row justify-content-center">
        <a href="#">I Forgot Password Or Username</a>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
